@using Nhom8.Data
@{
	ViewData["Title"] = "ManagerRoom";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<DatPhong>



<div class="content">
	<h1>Danh sách đặt phòng</h1>
	<p>bạn đã có @Model.Count lượt đặt phòng</p>
	
	<div class="content-bang">
		<table>
			<thead>
			<th colspan="2">
				<form method="get" asp-controller="Home" asp-action="ManagerRoom">
					<div class="header-bang">
						<input type="text" placeholder="name" name="searchString">
						<button type="submit" class="bt-search"><i class="fas fa-search"></i></button>
					</div>
				</form>
			</th>
			<th colspan="7"></th>
			</thead>
			<thead>
			@* <th><input type="checkbox" class="checkbox1" name="checkbox-customer"></th> *@
			<th>ID</th>
			<th>Khách hàng</th>
			<th>Khách sạn</th>
			<th>Kiểu phòng</th>
			<th>Số điện thoại</th>
			<th>ngày đến</th>
			<th>ngày đi</th>
			<th>Tình trạng</th>
			@* <th><input type="button" value="+"></th> *@
			</thead>
			@foreach (var item in Model)
			{
					<tr>
					
					<td>@item.IdDatPhong</td>
					<td class="checkbox-container">
						<div class="avatar">
									<img class="avatar-cus" src="@item.User?.Img" alt="User">
						</div>
						<div>
							<strong>@item.User?.TenKh</strong><br>
							<p>@item.User?.Email</p>
						</div>
					</td>
					<td>@item.IdPhongNavigation?.IdKsNavigation?.TenKs</td>
					<td>@item.IdPhongNavigation?.TenPhong</td>
					<td>@item.User?.Sdt</td>
					<td>@item.NgayCheckin</td>
					<td>@item.NgayCheckout</td>
					<td >
						@if(item.TrangThai == true)
						{
							<span style="color:rgb(6, 162, 6);">Đã thanh toán</span>
						}
						else
						{
							<span style="color:rgb(210, 1, 3);">Đã hủy</span>
						}
					</td>
					
				</tr>
			}

		</table>

	</div>
