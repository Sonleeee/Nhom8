
@{
    ViewData["Title"] = "RoomInfo";
    Layout = "~/Areas/Hotel/Views/Shared/_LayoutHotel.cshtml";
}

<div class="HotelBody">
    <header>
        <h1>Quản lý Phòng</h1>
    </header>

    <main>
        <section class="form-section">
            <h2>Thêm Phòng Mới</h2>
            <form id="add-room-form">
                <div class="form-group">
                    <label for="room-name">Tên Phòng:</label>
                    <input type="text" id="room-name" name="room-name" required>
                </div>

                <div class="form-group">
                    <label for="room-type">Loại Phòng:</label>
                    <input type="text" id="room-type" name="room-type" required>
                </div>

                <div class="form-group">
                    <label for="room-price">Giá Phòng (VND):</label>
                    <input type="number" id="room-price" name="room-price" required>
                </div>

                <div class="form-group">
                    <label for="room-description">Mô Tả:</label>
                    <textarea id="room-description" name="room-description" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <label for="room-image">Hình Ảnh:</label>
                    <input type="file" id="room-image" name="room-image" multiple>
                </div>

                <button type="submit">Thêm Phòng</button>
            </form>
        </section>

        <section class="room-list">
            <h2>Danh Sách Phòng</h2>
            <table id="room-table">
                <thead>
                    <tr>
                        <th>Tên Phòng</th>
                        <th>Loại Phòng</th>
                        <th>Giá (VND)</th>
                        <th>Mô Tả</th>
                        <th>Hình Ảnh</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Các phòng sẽ được thêm vào đây -->
                </tbody>
            </table>
        </section>
    </main>
</div>

<div id="image-overlay" class="overlay">
    <div class="overlay-content" id="overlay-content">
        <!-- Các hình ảnh chi tiết sẽ được thêm vào đây -->
    </div>
</div>

<script>
    document.getElementById('add-room-form').addEventListener('submit', function (event) {
        event.preventDefault();

        const roomName = document.getElementById('room-name').value;
        const roomType = document.getElementById('room-type').value;
        const roomPrice = document.getElementById('room-price').value;
        const roomDescription = document.getElementById('room-description').value;
        const roomImages = document.getElementById('room-image').files;

        console.log('Tên Phòng:', roomName);
        console.log('Loại Phòng:', roomType);
        console.log('Giá Phòng:', roomPrice);
        console.log('Mô Tả:', roomDescription);
        console.log('Hình Ảnh:', roomImages);

        // Kiểm tra xem các giá trị có hợp lệ không
        if (!roomName || !roomType || !roomPrice || roomImages.length === 0) {
            alert('Vui lòng điền đầy đủ thông tin và chọn ít nhất một hình ảnh.');
            return;
        }

        // Lấy phần tbody của bảng
        const table = document.getElementById('room-table').getElementsByTagName('tbody')[0];

        // Tạo một hàng mới trong bảng
        const newRow = table.insertRow();

        // Tạo các ô trong hàng mới
        const nameCell = newRow.insertCell(0);
        const typeCell = newRow.insertCell(1);
        const priceCell = newRow.insertCell(2);
        const descriptionCell = newRow.insertCell(3);
        const imageCell = newRow.insertCell(4);

        // Điền thông tin vào các ô
        nameCell.textContent = roomName;
        typeCell.textContent = roomType;
        priceCell.textContent = roomPrice;
        descriptionCell.textContent = roomDescription;

        // Hiển thị hình ảnh nhỏ
        for (let i = 0; i < roomImages.length; i++) {
            const image = document.createElement('img');
            image.src = URL.createObjectURL(roomImages[i]);
            image.alt = roomName + " Image";
            image.classList.add('room-image');
            imageCell.appendChild(image);
        }

        console.log('Đã thêm hàng mới vào bảng.');

        // Reset lại biểu mẫu
        document.getElementById('add-room-form').reset();
    });

    // Hiển thị tất cả hình ảnh của phòng khi nhấn vào nút "Chi Tiết"
    document.getElementById('room-table').addEventListener('click', function (event) {
        if (event.target.tagName === 'IMG') {
            const roomImages = event.target.closest('tr').querySelectorAll('.room-image');
            const overlayContent = document.getElementById('overlay-content');
            overlayContent.innerHTML = '';
            roomImages.forEach(function (image) {
                const overlayImage = document.createElement('img');
                overlayImage.src = image.src;
                overlayImage.alt = image.alt;
                overlayImage.classList.add('overlay-image');
                overlayContent.appendChild(overlayImage);
            });
            document.getElementById('image-overlay').style.display = 'flex';
        }
    });

    // Đóng overlay khi nhấn vào nó
    document.getElementById('image-overlay').addEventListener('click', function () {
        document.getElementById('image-overlay').style.display = 'none';
    });
</script>