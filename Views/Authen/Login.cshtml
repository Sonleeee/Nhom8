@model Nhom8.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCustomer2.cshtml";
}



<div id="content">
    <section class="vh-90">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1" style="padding-top:100px">
                    <form id="loginForm" method="post" asp-action="Login">                                                                
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="title " style="align-items: center; width: 100%">
                            <h2>Đăng nhập</h2>
                        </div>
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label asp-for="@Model.Email" class="form-label">Email</label>
                            <input asp-for="@Model.Email" type="email" id="email" name="email" class="form-control form-control-lg"
                                   placeholder="Enter a valid email address" required />
                        </div>

                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label class="form-label" asp-for="@Model.Password">Mật khẩu</label>
                            <input asp-for="@Model.Password" type="password" id="password" name="password" class="form-control form-control-lg"
                                   placeholder="Enter password" required />
                        </div>

                        <div class="d-flex justify-content-between align-items-center">                            
                            <a asp-controller="Authen" asp-action="Forgot" class="text-body">Quên mật khẩu</a>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg form-control" type="submit" style="width:100%">Đăng nhập</button>
                            <hr class="my-4">                            
                            <a asp-controller="Authen" asp-action="GGLogin" class="btn btn-primary btn-lg form-control">Đăng nhập với Google</a>
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Bạn không có tài khoản? <a asp-controller="Authen" asp-action="Register"
                                                          class="link-danger">Đăng ký</a>
                            </p>
                        </div>

                        <!-- Google Login Button -->
                        

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>