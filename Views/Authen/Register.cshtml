@model Nhom8.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutCustomer2.cshtml";
}


<div id="content">
    <section class="vh-90">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-2">Đăng ký tài khoản</h2>
                                <form asp-action="Register" enctype="multipart/form-data" method="post">
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" asp-for="TenKh"></label>
                                        <input type="text" asp-for="TenKh" class="form-control form-control-lg" />
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" asp-for="Email"></label>
                                        <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" asp-for="Mk"></label>
                                        <input type="password" asp-for="Mk" class="form-control form-control-lg" />
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" asp-for="ConfirmPassword"></label>
                                        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                    </div>

                                    <!-- OTP Modal -->
                                    <div class="modal fade" id="otpModal" tabindex="-1" role="dialog" aria-labelledby="otpModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="otpModalLabel">Enter OTP</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label for="otp">OTP Code</label>
                                                        <input type="text" class="form-control" id="otp" placeholder="Enter OTP">
                                                    </div>
                                                    <button type="button" class="btn btn-primary btn-block" onclick="submitOtpForm()">Verify</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" data-mdb-button-init
                                                data-mdb-ripple-init class="btn btn-primary btn-block btn-lg gradient-custom-4 text-body">
                                            Đăng ký
                                        </button>
                                    </div>

                                    <div style="">
                                        <p class="text-center text-muted mt-2 mb-0">
                                            Bạn đã có tài khoản? <a asp-controller="Authen" asp-action="Login"
                                                                    class="fw-bold text-body"><u>Đăng nhập</u></a>
                                        </p>

                                        <p class="text-center text-muted mt-2 mb-0">
                                            <a asp-controller="Authen" asp-action="Register" class="fw-bold text-body">Hợp tác với chúng tôi</a>
                                        </p>
                                    </div>
                                </form>

                                <script>
                                    function submitOtpForm() {
                                        // Thêm logic xử lý OTP tại đây nếu cần
                                        document.querySelector('form').submit();
                                    }
                                </script>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>