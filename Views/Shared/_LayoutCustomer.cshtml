                        </div>
                    </div>
                </div>
            </nav>

            <div class="booking-form-container">
                <div class="booking-form">
                    <form class="d-flex w-100" method="get" asp-controller="research" asp-action="research">
                        <div class="form-group d-flex align-items-center me-2">
                            <i class="ti-location-pin me-2"></i>
                            <input type="text" class="form-control" style="border: none; box-shadow: none;" name="location" id="location" placeholder="Bạn muốn đến đâu">
                        </div>

                        <div class="form-group d-flex align-items-center me-2">
                            <i class="ti-calendar me-2"></i>
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="datePicker" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ngày nhận phòng - Ngày trả phòng
                                </button>
                                <ul class="dropdown-menu p-3" aria-labelledby="datePicker">
                                    <div class="row">
                                        <div class="col">
                                            <div class="row">
                                                <div class="col">
                                                    <p>Ngày nhận phòng</p>
                                                    <input type="date" name="ngay_nhan_phong" class="form-control mb-2" id="checkInDate">
                                                </div>
                                                <p></p>
                                                <div class="col">
                                                    <p>Ngày trả phòng</p>
                                                    <input type="date" name="ngay_tra_phong" class="form-control mb-2" id="checkOutDate">
                                                </div>
                                            </div>
                                            <button class="btn btn-primary w-100" id="confirmDate">Xác nhận</button>
                                        </div>
                                    </div>
                                </ul>
                            </div>
                        </div>                        

                        <div class="form-group d-flex align-items-center me-2">
                            <i class="ti-user me-2"></i>
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownMenuClickableInside" data-bs-toggle="dropdown" data-bs-auto-close="dropdown" aria-expanded="false">
                                    2 người lớn - 0 trẻ em - 1 phòng
                                </button>
                                <ul class="dropdown-menu p-3" aria-labelledby="dropdownMenuClickableInside">
                                    <div class="mb-3">
                                        <label for="adults" class="form-label">Người lớn</label>

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="button" class="btn btn-outline-secondary" id="decrease-adults">-</button>
                                            </div>

                                            <input type="text" name="nguoi_lon" class="form-control text-center" id="adults" value="0">

                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-outline-secondary" id="increase-adults">+</button>
                                            </div>
                                        </div>   
                                        
                                    </div>
                                    <div class="mb-3">
                                        <label for="children" class="form-label">Trẻ em</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="button" class="btn btn-outline-secondary" id="decrease-children">-</button>
                                            </div>
                                            <input type="text" name="tre_em" class="form-control text-center" id="children" value="0">
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-outline-secondary" id="increase-children">+</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="rooms" class="form-label">Phòng</label>

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="button" class="btn btn-outline-secondary" id="decrease-room">-</button>
                                            </div>
                                            <input type="text" name="phong" class="form-control text-center" id="rooms" value="0">
                                            <div class="input-group-prepend">
                                                <button type="button" class="btn btn-outline-secondary" id="decrease-room">-</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group" id="children-ages">
                                        <!-- Các ô nhập tuổi của trẻ sẽ được thêm vào đây -->
                                    </div>

                                    <button class="btn btn-primary w-100" id="confirmGuest">Xong</button>
                                </ul>
                            </div>

                            
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>

        @RenderBody()

        @await Html.PartialAsync("_Footer")
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
